# Database Configuration
MONGODB=mongodb://localhost/condominio-app

# Application Configuration
PORT=3000
BCRYPT_SALT=10

# Frontend Configuration
HOST_FRONT=http://localhost:4200

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=7d

# Email Verification Configuration
IS_EMAIL_VERIFICATION_ENABLED=false
EMAIL_VERIFICATION_SECRET=your_email_verification_secret_here
EMAIL_VERIFICATION_EXPIRES_IN=24h
EMAIL_VERIFICATION_URL=http://localhost:3000/api/v1/auth/verify-email
EMAIL_VERIFICATION_SUBJECT=Email Verification
EMAIL_VERIFICATION_SENDER=your_sender_email@example.com

# Email Verification Testing
EMAIL_VERIFICATION_TEST_ENABLED=true
EMAIL_VERIFICATION_TEST_EMAIL=test@example.com
EMAIL_VERIFICATION_TEST_NAME=Test User

# Password Reset Configuration
RESET_PASSWORD_SECRET=your_reset_password_secret_here
RESET_PASSWORD_URL=http://localhost:3000/api/v1/auth/reset-password

# MailerSend Configuration
MAILERSEND_API_KEY=your_mailersend_api_key_here
